{
  "name": "template-chrome-extension",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Template for developing Chrome extensions with Svelte",
  "author": "Eric Liu (https://github.com/metonym)",
  "extension": {
    "outDir": "dist",
    "port": 1234
  },
  "scripts": {
    "clean": "node scripts/clean.js",
    "develop": "run-s clean && rollup -cw",
    "build": "run-s clean && rollup -c",
    "postbuild": "hash-static dist/index.html",
    "lint": "tslint --fix -p . -c tslint.json",
    "prettier": "prettier --write ./src/**.{ts,svelte}",
    "test": "jest --coverage",
    "test:tdd": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/chrome": "^0.0.91",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.22",
    "fs-extra": "^8.1.0",
    "hash-static": "^0.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.27.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "svelte": "^3.14.1",
    "ts-jest": "^24.1.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint prettier",
      "pre-push": "run-s test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
